  "license": "MIT",
  "scripts": {
    "start": "ts-node dist/server.js",
    "build": "tsc -p .",
    "dev": "nodemon -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "ts-node src/server.ts",
